#!/bin/bash

root="$HOME/Dropbox/school/15/F"
hour=$(date +"%H")
case $(date +"%w") in
	1|3|5)
		if [ $hour -lt 12 ]; then
			cd $root/PHYS3416/
		elif [ $hour -gt 14 ]; then
			cd $root/MATH4341/
		else
			cd $root/GOVT2301/
		fi
		;;
	2|4)
		if [ $hour -lt 15 ]; then
			cd $root/PHYS4301/
		else
			cd $root/MATH4301/
		fi
		;;
	*)
		cd $root
		;;
esac
