#!/bin/bash

ROOT="/Users/phy1729/Documents/school/14/S"
HOUR=$(date +"%H")
case $(date +"%w") in
	1|3|5)
		if [ $HOUR -lt 15 ]; then
			cd $ROOT/PHYS3411/
		elif [ $HOUR -eq 15 ]; then
			cd $ROOT/MATH3379/
		else
			cd $ROOT/MATH3312/
		fi
		;;
	2|4)
		if [ $HOUR -lt 12 ]; then
			cd $ROOT/PHYS4311/
		elif [ $HOUR -gt 14 ]; then
			cd $ROOT/MATH4V91/
		else
			cd $ROOT/PHYS3325/
		fi
		;;
esac
